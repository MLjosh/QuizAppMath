<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation = "portrait"
    android:background="@drawable/bgimage"
    tools:context=".QuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:text="Score:"
            android:textColor="@color/black"
            android:background="@drawable/asset1"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtViewTimer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="35sp"
            android:background="@drawable/asset1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalQuestion"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:text="10/10"
            android:background="@drawable/asset1"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="175dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/levelmode"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtlevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="EASY" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtQuestionContainer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:background="@drawable/whitepaint"
            android:text="Textview in Textview inTextview inTextview inTextview inTextview in"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold" />


    </LinearLayout>


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:text="12"
            android:padding="10dp"
            android:textSize="20sp"
            android:button="@null"
            android:freezesText="true"
            android:textAlignment="center"

            />

        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:button="@null"
            android:freezesText="true"
            android:textAlignment="center"

            android:text="12" />

        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:padding="10dp"
            android:button="@null"
            android:freezesText="true"
            android:textAlignment="center"

            android:text="12" />

        <RadioButton
            android:id="@+id/radio_button4"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:button="@null"
            android:freezesText="true"
            android:textAlignment="center"

            android:text="12" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >


        <Button
            android:id="@+id/button"
            android:background="@drawable/buttons"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Confirm" />
    </LinearLayout>


</LinearLayout>